<Window x:Class="WpfApp2.UI.PlcSerialTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PLC串口测试" Height="820" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#FF2C3E50">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF34495E" CornerRadius="8" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="DeviceNameText" Text="PLC串口测试" FontSize="18" FontWeight="Bold" Foreground="#FF3498DB"/>
                    <TextBlock x:Name="DeviceMetaText" Text="" FontSize="12" Foreground="#FFBDC3C7" Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                        <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Fill="Gray" Margin="0,0,6,0"/>
                        <TextBlock x:Name="StatusText" Text="未连接" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                    <Button x:Name="ConnectButton" Content="连接" Width="80" Height="30" Margin="0,0,8,0"
                            Background="#FF27AE60" Foreground="White" FontWeight="Bold"
                            Click="ConnectButton_Click"/>
                    <Button x:Name="DisconnectButton" Content="断开" Width="80" Height="30"
                            Background="#FFE74C3C" Foreground="White" FontWeight="Bold"
                            Click="DisconnectButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Frame x:Name="TestFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Background="#FF2C3E50"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="CloseButton" Content="关闭" Width="90" Height="30"
                    Background="#FF95A5A6" Foreground="White" FontWeight="Bold"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
