<Page x:Class="WpfApp2.UI.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.UI"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1920"
      Title="Page2">

    <Grid>

        <!--两行Grid-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 按钮横向排列，便于扩展 --><!--
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,10,0,0" >
            --><!--创建一个按键，名为“导入”--><!--
            <Button Content="导入" Width="75" Margin="0,0,10,0" Click="Button_Click"/>
            --><!--创建一个按键，名为“关闭方案”--><!--
            <Button Content="关闭方案" Width="75" Margin="0,0,10,0" Click="Button_Click_2"/>
            --><!--创建一个按键，名为“返回”--><!--
            <Button Content="返回" Width="75" Margin="0,0,10,0" Click="Button_Click_1"/>
        </StackPanel>
        <Release:VmGlobalToolControl  x:Name="VmGlobalToolControl"  Grid.Row="1" />
        <Release:VmMainViewConfigControl x:Name="VmMainViewConfigControl" Grid.Row="2" />-->

    </Grid>
</Page>
