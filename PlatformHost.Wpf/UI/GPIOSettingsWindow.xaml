<Window x:Class="WpfApp2.UI.GPIOSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GPIO设置" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF2C3E50">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="⚙️ GPIO硬件配置" FontSize="24" FontWeight="Bold" 
                   Foreground="White" HorizontalAlignment="Center"/>

        <!-- 设备类型设置 -->
        <Border Grid.Row="2" Background="#FF34495E" CornerRadius="8" Padding="15">
            <StackPanel>
                <TextBlock Text="设备类型" FontSize="16" FontWeight="Bold" Foreground="#FF3498DB" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="设备型号:" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="DeviceTypeComboBox" Height="35" FontSize="14"
                              Background="White" Foreground="Black"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 端口设置 -->
        <Border Grid.Row="4" Background="#FF34495E" CornerRadius="8" Padding="15">
            <StackPanel>
                <TextBlock Text="端口配置" FontSize="16" FontWeight="Bold" Foreground="#FF3498DB" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="端口号:" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="PortTextBox" Height="35" FontSize="14"
                             Background="White" Foreground="Black" VerticalContentAlignment="Center" Padding="10,0"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 当前配置显示 -->
        <Border Grid.Row="6" Background="#FF34495E" CornerRadius="8" Padding="15">
            <StackPanel>
                <TextBlock Text="当前配置" FontSize="16" FontWeight="Bold" Foreground="#FF3498DB" Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="设备:" FontSize="14" Foreground="White" Width="60"/>
                    <TextBlock x:Name="CurrentDeviceText" FontSize="14" Foreground="#FFE67E22" FontWeight="Bold"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="端口:" FontSize="14" Foreground="White" Width="60"/>
                    <TextBlock x:Name="CurrentPortText" FontSize="14" Foreground="#FFE67E22" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,15">
            <Button x:Name="OKButton" Content="确定" Width="100" Height="40" Margin="10,0"
                    Background="#FF27AE60" Foreground="White" FontWeight="Bold" FontSize="14"
                    Click="OKButton_Click" IsDefault="True"/>
            
            <Button x:Name="TestButton" Content="测试连接" Width="100" Height="40" Margin="10,0"
                    Background="#FF3498DB" Foreground="White" FontWeight="Bold" FontSize="14"
                    Click="TestButton_Click"/>
            
            <Button x:Name="CancelButton" Content="取消" Width="100" Height="40" Margin="10,0"
                    Background="#FFE74C3C" Foreground="White" FontWeight="Bold" FontSize="14"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window> 