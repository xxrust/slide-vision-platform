<Window x:Class="WpfApp2.UI.CicdCompareDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CICD 对比明细"
        Height="820"
        Width="1220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="MismatchRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMismatch}" Value="True">
                    <Setter Property="Foreground" Value="#FFB00020"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Background" Value="#11B00020"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="视图：" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <RadioButton x:Name="SampleModeRadio"
                         Content="按样品"
                         IsChecked="True"
                         Margin="0,0,12,0"
                         Checked="ModeRadio_Checked"/>
            <RadioButton x:Name="ItemModeRadio"
                         Content="按项目"
                         Margin="0,0,20,0"
                         Checked="ModeRadio_Checked"/>
            <RadioButton x:Name="MatrixModeRadio"
                         Content="矩阵"
                         Margin="0,0,20,0"
                         Checked="ModeRadio_Checked"/>

            <CheckBox x:Name="OnlyMismatchCheckBox"
                      Content="仅显示差异"
                      VerticalAlignment="Center"
                      Margin="0,0,12,0"
                      Checked="FilterOption_Changed"
                      Unchecked="FilterOption_Changed"/>

            <CheckBox x:Name="ShowLimitsCheckBox"
                      Content="显示上下限"
                      VerticalAlignment="Center"
                      Margin="0,0,12,0"
                      Checked="FilterOption_Changed"
                      Unchecked="FilterOption_Changed"/>

            <CheckBox x:Name="ShowNgInfoCheckBox"
                      Content="显示OK/NG与分类"
                      VerticalAlignment="Center"
                      IsChecked="True"
                      Margin="0,0,12,0"
                      Checked="FilterOption_Changed"
                      Unchecked="FilterOption_Changed"/>

            <TextBlock x:Name="SummaryTextBlock"
                       VerticalAlignment="Center"
                       Foreground="#FF666666"
                       Margin="20,0,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="样品：" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Grid.Column="1"
                      x:Name="SampleComboBox"
                      Height="28"
                      SelectionChanged="SampleComboBox_SelectionChanged"/>
            <Button Grid.Column="2"
                    Content="上一样品"
                    Margin="8,0,0,0"
                    Padding="10,4"
                    Click="PrevSampleButton_Click"/>
            <Button Grid.Column="3"
                    Content="下一样品"
                    Margin="8,0,0,0"
                    Padding="10,4"
                    Click="NextSampleButton_Click"/>

            <TextBlock Grid.Column="4" Text="项目：" VerticalAlignment="Center" Margin="20,0,8,0"/>
            <ComboBox Grid.Column="5"
                      x:Name="ItemComboBox"
                      Height="28"
                      SelectionChanged="ItemComboBox_SelectionChanged"/>

            <StackPanel Grid.Column="6" Orientation="Vertical" Margin="16,0,0,0">
                <Button x:Name="TogglePathsButton"
                        Content="显示路径"
                        HorizontalAlignment="Left"
                        Padding="10,2"
                        Click="TogglePathsButton_Click"/>
                <TextBlock x:Name="PathTextBlock"
                           Margin="0,6,0,0"
                           Foreground="#FF888888"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    BorderThickness="1"
                    BorderBrush="#FFDDDDDD"
                    Background="#FFF7F7F7"
                    Padding="10"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="基准结果：" Foreground="#FF666666"/>
                    <TextBlock Grid.Column="1" x:Name="ReferResultTextBlock"/>
                    <TextBlock Grid.Column="2" Text="测试结果：" Foreground="#FF666666"/>
                    <TextBlock Grid.Column="3" x:Name="TestResultTextBlock"/>

                    <TextBlock Grid.Column="0" Margin="0,22,0,0" Text="基准分类：" Foreground="#FF666666"/>
                    <TextBlock Grid.Column="1" Margin="0,22,0,0" x:Name="ReferDefectTextBlock"/>
                    <TextBlock Grid.Column="2" Margin="0,22,0,0" Text="测试分类：" Foreground="#FF666666"/>
                    <TextBlock Grid.Column="3" Margin="0,22,0,0" x:Name="TestDefectTextBlock"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <DataGrid x:Name="SampleDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          RowStyle="{StaticResource MismatchRowStyle}"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="项目" Binding="{Binding ItemName}" Width="220"/>
                        <DataGridTextColumn Header="基准值" Binding="{Binding ReferValue}" Width="*"/>
                        <DataGridTextColumn Header="测试值" Binding="{Binding TestValue}" Width="*"/>
                        <DataGridTextColumn Header="差值" Binding="{Binding Diff}" Width="120"/>
                        <DataGridTextColumn Header="阈值" Binding="{Binding Threshold}" Width="120"/>
                        <DataGridTextColumn x:Name="SampleLowerLimitColumn" Header="下限" Binding="{Binding LowerLimit}" Width="120"/>
                        <DataGridTextColumn x:Name="SampleUpperLimitColumn" Header="上限" Binding="{Binding UpperLimit}" Width="120"/>
                        <DataGridTextColumn Header="原因" Binding="{Binding Reason}" Width="320"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid x:Name="ItemDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          RowStyle="{StaticResource MismatchRowStyle}"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          Visibility="Collapsed">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" Binding="{Binding ImageNumber}" Width="80"/>
                        <DataGridTextColumn x:Name="ItemReferResultColumn" Header="基准结果" Binding="{Binding ReferResult}" Width="90"/>
                        <DataGridTextColumn x:Name="ItemTestResultColumn" Header="测试结果" Binding="{Binding TestResult}" Width="90"/>
                        <DataGridTextColumn x:Name="ItemReferDefectColumn" Header="基准分类" Binding="{Binding ReferDefectType}" Width="140"/>
                        <DataGridTextColumn x:Name="ItemTestDefectColumn" Header="测试分类" Binding="{Binding TestDefectType}" Width="140"/>
                        <DataGridTextColumn Header="基准值" Binding="{Binding ReferValue}" Width="*"/>
                        <DataGridTextColumn Header="测试值" Binding="{Binding TestValue}" Width="*"/>
                        <DataGridTextColumn Header="差值" Binding="{Binding Diff}" Width="120"/>
                        <DataGridTextColumn Header="阈值" Binding="{Binding Threshold}" Width="120"/>
                        <DataGridTextColumn x:Name="ItemLowerLimitColumn" Header="下限" Binding="{Binding LowerLimit}" Width="120"/>
                        <DataGridTextColumn x:Name="ItemUpperLimitColumn" Header="上限" Binding="{Binding UpperLimit}" Width="120"/>
                        <DataGridTextColumn Header="原因" Binding="{Binding Reason}" Width="260"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid x:Name="MatrixDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="All"
                          FontSize="12"
                          RowHeight="22"
                          ColumnHeaderHeight="44"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          Visibility="Collapsed"
                          PreviewMouseLeftButtonDown="MatrixDataGrid_PreviewMouseLeftButtonDown">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="Padding" Value="2,0,2,0"/>
                        </Style>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Padding" Value="2,2,2,2"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" Binding="{Binding ImageNumber}" Width="60"/>
                        <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
