<Window x:Class="WpfApp2.UI.LotSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.UI"
        xmlns:controls="clr-namespace:WpfApp2.UI.Controls"
        mc:Ignorable="d"
        Title="LOT设置" Height="650" Width="620"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid Background="#FF020223">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="LOT设置" FontSize="24" Foreground="White"
                   HorizontalAlignment="Center" Margin="20,16,20,10"/>

        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="请输入LOT编号:" FontSize="18" Foreground="White" 
                       VerticalAlignment="Center" Margin="0,0,0,10"/>

            <Border Grid.Row="1" BorderBrush="#FF566573" BorderThickness="1" Background="White" Padding="8" CornerRadius="6">
                <TextBox x:Name="LotTextBox"
                         FontSize="30"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="False"
                         IsReadOnlyCaretVisible="False"/>
            </Border>
        </Grid>

        <controls:VirtualKeyboardControl x:Name="VirtualKeyboard" Grid.Row="2" Margin="18,10,18,0"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,14,20,18">
            <Button x:Name="SaveButton" Content="确定" Width="100" Height="40" 
                    Background="Green" Foreground="White" FontSize="18"
                    Margin="0,0,20,0" Click="SaveButton_Click"/>

            <Button x:Name="CancelButton" Content="取消" Width="100" Height="40" 
                    Background="Red" Foreground="White" FontSize="18"
                    Margin="20,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

