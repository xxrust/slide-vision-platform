<Window x:Class="WpfApp2.UI.ValidatorMachineResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="验机测试结果分析"
        Height="700"
        Width="1400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="#FFF5F5F5">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4472C4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5B85D6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF365F9C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderCellStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF4472C4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#FF2E5A9C"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <Style x:Key="DataCellStyle" TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <Border Grid.Row="0" Background="#FF2C3E50" CornerRadius="6" Padding="15,10" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="验机测试结果分析"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="LotInfoTextBlock"
                           FontSize="16"
                           Foreground="#FFAAAAAA"
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 项目选择区域 -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="15,12" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="选择检测项目:"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,15,0"/>

                <ComboBox x:Name="ProjectComboBox"
                          Grid.Column="1"
                          Height="36"
                          Padding="10,6"
                          FontSize="15"
                          VerticalAlignment="Center"
                          SelectionChanged="ProjectComboBox_SelectionChanged"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="30,0,0,0">
                    <TextBlock Text="样品数:"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="SampleCountTextBlock"
                               Text="0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="#FF4472C4"
                               FontWeight="Bold"/>

                    <TextBlock Text="巡回次数:"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="30,0,8,0"/>
                    <TextBlock x:Name="LoopCycleTextBlock"
                               Text="0"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="#FF4472C4"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 数据矩阵表格 -->
        <Border Grid.Row="2" Background="White" CornerRadius="6" Padding="10" Margin="0,0,0,15">
            <DataGrid x:Name="ResultsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      CanUserReorderColumns="False"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      Background="White"
                      AlternatingRowBackground="#FFF8F8F8"
                      RowBackground="White"
                      BorderBrush="#FFCCCCCC"
                      BorderThickness="1"
                      ColumnHeaderStyle="{StaticResource HeaderCellStyle}"
                      CellStyle="{StaticResource DataCellStyle}"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
                <!-- 列会在代码中动态生成 -->
            </DataGrid>
        </Border>

        <!-- 统计信息区域 - 重复精度分析 -->
        <Border Grid.Row="3" Background="White" CornerRadius="6" Padding="15,12" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="重复精度分析 - 各图号最大极差:"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,15,0"/>
                <TextBlock x:Name="MaxRangeTextBlock"
                           Text="--"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Foreground="#FFE74C3C"
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="导出Excel"
                    Width="110"
                    Height="38"
                    Style="{StaticResource ModernButtonStyle}"
                    Click="ExportExcelButton_Click"
                    Margin="0,0,10,0"/>

            <Button Content="导出CSV"
                    Width="110"
                    Height="38"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="#FF27AE60"
                    Click="ExportCsvButton_Click"
                    Margin="0,0,10,0"/>

            <Button Content="关闭"
                    Width="90"
                    Height="38"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="#FF6C757D"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
