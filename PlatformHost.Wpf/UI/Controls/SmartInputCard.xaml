<UserControl x:Class="WpfApp2.UI.Controls.SmartInputCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1050" d:DesignWidth="600"
             Background="Transparent">
    
    <UserControl.Resources>
        <!-- 现代化按钮样式 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF34495E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1ABC9C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 数字键盘按钮样式 -->
        <Style x:Key="NumPadButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <!-- 功能按钮样式 -->
        <Style x:Key="FunctionButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFE74C3C"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <!-- 确认取消按钮样式 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>

        <!-- iPhone风格按钮样式 -->
        <Style x:Key="iPhoneButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF505050"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="30"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF707070"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!-- 导航按钮样式 -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="#FF6C757D"/>
        </Style>
    </UserControl.Resources>

    <!-- 主容器 -->
    <Border Background="#FFF8F9FA" 
            BorderBrush="#FFDEE2E6" 
            BorderThickness="1" 
            CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" 
                            BlurRadius="20" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- 标题栏 -->
                <RowDefinition Height="300"/>   <!-- 图片展示区 -->
                <RowDefinition Height="Auto"/>  <!-- 文字说明区 -->
                <RowDefinition Height="Auto"/>  <!-- 当前值显示区 -->
                <RowDefinition Height="Auto"/>  <!-- 滑动条区 -->
                <RowDefinition Height="Auto"/>  <!-- 数字键盘区 -->
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" Margin="0,0,0,15" Background="Transparent" 
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                  Cursor="SizeAll">
                <TextBlock x:Name="TitleTextBlock" 
                          Text="参数设置" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          Foreground="#FF2C3E50"
                          HorizontalAlignment="Center"
                          IsHitTestVisible="False"/>
                <Button x:Name="CloseButton" 
                       Content="✕" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Background="Transparent"
                       BorderThickness="0"
                       FontSize="18"
                       Foreground="#FF95A5A6"
                       Cursor="Hand"
                       Padding="8"
                       Click="CloseButton_Click"/>
            </Grid>

            <!-- 图片展示区 -->
            <Border Grid.Row="1" 
                   Background="White" 
                   CornerRadius="10" 
                   BorderBrush="#FFDEE2E6" 
                   BorderThickness="1"
                   Margin="0,0,0,15">
                <Image x:Name="DescriptionImage" 
                      Stretch="Uniform" 
                      Margin="10"/>
            </Border>

            <!-- 文字说明区 -->
            <Border Grid.Row="2" 
                   Background="#FFF8F9FA" 
                   CornerRadius="8" 
                   BorderBrush="#FFDEE2E6" 
                   BorderThickness="1"
                   Margin="0,0,0,15"
                   Padding="15">
                <TextBlock x:Name="DescriptionTextBlock" 
                          Text="这里显示参数的详细说明和影响描述" 
                          FontSize="14" 
                          Foreground="#FF495057"
                          TextWrapping="Wrap"
                          LineHeight="20"/>
            </Border>

            <!-- 当前值显示区 -->
            <Border Grid.Row="3" 
                   Background="#FF3498DB" 
                   CornerRadius="10"
                   Margin="0,0,0,15"
                   Padding="20,15">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="当前值: " 
                                  FontSize="18" 
                                  Foreground="White" 
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="CurrentValueTextBlock" 
                                  Text="0.00" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="White" 
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="UnitTextBlock" 
                                  Text="" 
                                  FontSize="18" 
                                  Foreground="White" 
                                  VerticalAlignment="Center" 
                                  Margin="8,0,0,0"
                                  Visibility="Collapsed"/>
                    </StackPanel>
                    <Button x:Name="ConfigButton" 
                           Content="⚙" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Background="Transparent"
                           BorderThickness="0"
                           FontSize="16"
                           Foreground="White"
                           Cursor="Hand"
                           Padding="8"
                           ToolTip="配置参数"
                           Click="ConfigButton_Click"/>
                </Grid>
            </Border>

            <!-- 滑动条区 -->
            <StackPanel Grid.Row="4" Margin="0,0,0,20">
                <Grid Margin="0,0,0,10">
                    <TextBlock x:Name="MinValueText" Text="0" HorizontalAlignment="Left" FontSize="14" Foreground="#FF6C757D" FontWeight="SemiBold"/>
                    <TextBlock x:Name="MaxValueText" Text="100" HorizontalAlignment="Right" FontSize="14" Foreground="#FF6C757D" FontWeight="SemiBold"/>
                </Grid>
                <Slider x:Name="ValueSlider" 
                       Minimum="0" 
                       Maximum="100" 
                       TickFrequency="1"
                       IsSnapToTickEnabled="True"
                       ValueChanged="ValueSlider_ValueChanged"
                       Height="70"
                       Margin="10,0,10,0">
                    <Slider.Style>
                        <Style TargetType="Slider">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Slider">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                                                                         <!-- 滑动轨道 -->
                                             <Border Grid.Row="1" 
                                                    x:Name="TrackBackground"
                                                    Height="18"
                                                    Background="#FFDEE2E6"
                                                    CornerRadius="9"
                                                    VerticalAlignment="Center"/>
                                             <!-- 进度轨道 -->
                                             <Rectangle Grid.Row="1"
                                                       x:Name="PART_SelectionRange"
                                                       Height="18"
                                                       Fill="#FF3498DB"
                                                       RadiusX="9"
                                                       RadiusY="9"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center"/>
                                             <!-- 滑块 -->
                                             <Track Grid.Row="1" x:Name="PART_Track">
                                                 <Track.Thumb>
                                                     <Thumb x:Name="Thumb" 
                                                           Width="50" 
                                                           Height="50">
                                                         <Thumb.Style>
                                                             <Style TargetType="Thumb">
                                                                 <Setter Property="Template">
                                                                     <Setter.Value>
                                                                         <ControlTemplate TargetType="Thumb">
                                                                             <Grid>
                                                                                 <!-- 外层阴影 -->
                                                                                 <Ellipse Fill="#30000000" 
                                                                                         Width="54" 
                                                                                         Height="54"
                                                                                         Margin="2,2,0,0"/>
                                                                                 <!-- 主体 -->
                                                                                 <Ellipse x:Name="ThumbEllipse"
                                                                                         Fill="#FF3498DB" 
                                                                                         Width="50" 
                                                                                         Height="50"
                                                                                         Stroke="White"
                                                                                         StrokeThickness="4"/>
                                                                                 <!-- 内部指示点 -->
                                                                                 <Ellipse Fill="White" 
                                                                                         Width="12" 
                                                                                         Height="12"
                                                                                         HorizontalAlignment="Center"
                                                                                         VerticalAlignment="Center"/>
                                                                             </Grid>
                                                                             <ControlTemplate.Triggers>
                                                                                 <Trigger Property="IsMouseOver" Value="True">
                                                                                     <Setter TargetName="ThumbEllipse" Property="Fill" Value="#FF2980B9"/>
                                                                                     <Setter TargetName="ThumbEllipse" Property="Width" Value="54"/>
                                                                                     <Setter TargetName="ThumbEllipse" Property="Height" Value="54"/>
                                                                                     <Setter TargetName="ThumbEllipse" Property="StrokeThickness" Value="5"/>
                                                                                 </Trigger>
                                                                                 <Trigger Property="IsDragging" Value="True">
                                                                                     <Setter TargetName="ThumbEllipse" Property="Fill" Value="#FF1ABC9C"/>
                                                                                     <Setter TargetName="ThumbEllipse" Property="Width" Value="58"/>
                                                                                     <Setter TargetName="ThumbEllipse" Property="Height" Value="58"/>
                                                                                     <Setter TargetName="ThumbEllipse" Property="StrokeThickness" Value="6"/>
                                                                                 </Trigger>
                                                                             </ControlTemplate.Triggers>
                                                                         </ControlTemplate>
                                                                     </Setter.Value>
                                                                 </Setter>
                                                             </Style>
                                                         </Thumb.Style>
                                                     </Thumb>
                                                 </Track.Thumb>
                                             </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Slider.Style>
                </Slider>
            </StackPanel>

            <!-- 数字键盘区 -->
            <Grid Grid.Row="5" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 输入显示框 -->
                <Border Grid.Row="0" 
                       Background="White" 
                       BorderBrush="#FFDEE2E6" 
                       BorderThickness="2" 
                       CornerRadius="8" 
                       Margin="0,0,0,15"
                       Padding="15,10">
                    <TextBox x:Name="InputTextBox" 
                            FontSize="24" 
                            FontWeight="SemiBold"
                            Text="0"
                            TextAlignment="Center"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#FF2C3E50"
                            IsReadOnly="True"/>
                </Border>

                <!-- 键盘和操作区域 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左区域：数字输入区（iPhone风格） -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- 第一行：功能键 -->
                        <Button Grid.Row="0" Grid.Column="0" Content="AC" Style="{StaticResource iPhoneButtonStyle}" Background="#FFA6A6A6" Click="ClearButton_Click"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="+/-" Style="{StaticResource iPhoneButtonStyle}" Background="#FFA6A6A6" Click="SignButton_Click"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="." Style="{StaticResource iPhoneButtonStyle}" Background="#FFA6A6A6" Click="DecimalButton_Click"/>

                        <!-- 第二行 -->
                        <Button Grid.Row="1" Grid.Column="0" Content="7" Style="{StaticResource iPhoneButtonStyle}" Click="NumberButton_Click"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="8" Style="{StaticResource iPhoneButtonStyle}" Click="NumberButton_Click"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="9" Style="{StaticResource iPhoneButtonStyle}" Click="NumberButton_Click"/>

                        <!-- 第三行 -->
                        <Button Grid.Row="2" Grid.Column="0" Content="4" Style="{StaticResource iPhoneButtonStyle}" Click="NumberButton_Click"/>
                        <Button Grid.Row="2" Grid.Column="1" Content="5" Style="{StaticResource iPhoneButtonStyle}" Click="NumberButton_Click"/>
                        <Button Grid.Row="2" Grid.Column="2" Content="6" Style="{StaticResource iPhoneButtonStyle}" Click="NumberButton_Click"/>

                        <!-- 第四行 -->
                        <Button Grid.Row="3" Grid.Column="0" Content="1" Style="{StaticResource iPhoneButtonStyle}" Click="NumberButton_Click"/>
                        <Button Grid.Row="3" Grid.Column="1" Content="2" Style="{StaticResource iPhoneButtonStyle}" Click="NumberButton_Click"/>
                        <Button Grid.Row="3" Grid.Column="2" Content="3" Style="{StaticResource iPhoneButtonStyle}" Click="NumberButton_Click"/>

                        <!-- 第五行 -->
                        <Button Grid.Row="4" Grid.Column="0" Content="0" Style="{StaticResource iPhoneButtonStyle}" Click="NumberButton_Click"/>
                        <Button Grid.Row="4" Grid.Column="2" Content="确认" Style="{StaticResource iPhoneButtonStyle}" Background="#FFFF9500" Click="ConfirmButton_Click"/>
                    </Grid>

                    <!-- 右区域：导航和操作区 -->
                    <StackPanel Grid.Column="2">
                        <Button x:Name="PreviousButton" 
                               Content="◀ 上一步" 
                               Style="{StaticResource NavigationButtonStyle}"
                               Margin="0,0,0,10"
                               Click="PreviousButton_Click"/>
                        <Button x:Name="NextButton" 
                               Content="下一步 ▶" 
                               Style="{StaticResource NavigationButtonStyle}"
                               Margin="0,0,0,10"
                               Click="NextButton_Click"/>
                        <Button x:Name="WriteValueButton" 
                               Content="写入值" 
                               Style="{StaticResource NavigationButtonStyle}"
                               Background="#FF27AE60"
                               Margin="0,0,0,10"
                               Click="ApplyButton_Click"/>
                        <Button x:Name="CancelButton" 
                               Content="取消" 
                               Style="{StaticResource NavigationButtonStyle}"
                               Background="#FF95A5A6"
                               Click="CancelButton_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>


        </Grid>
    </Border>
</UserControl> 