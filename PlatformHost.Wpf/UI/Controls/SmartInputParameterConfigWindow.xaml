<Window x:Class="WpfApp2.UI.Controls.SmartInputParameterConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="参数配置" 
        Width="500" 
        Height="600"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FFF8F9FA">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- 标题 -->
            <RowDefinition Height="Auto"/>  <!-- 参数名称 -->
            <RowDefinition Height="Auto"/>  <!-- 单位设置 -->
            <RowDefinition Height="Auto"/>  <!-- 范围设置 -->
            <RowDefinition Height="Auto"/>  <!-- 精度设置 -->
            <RowDefinition Height="Auto"/>  <!-- 图片设置 -->
            <RowDefinition Height="*"/>     <!-- 描述设置 -->
            <RowDefinition Height="Auto"/>  <!-- 按钮区 -->
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="智能输入参数配置" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#FF2C3E50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- 参数名称 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="参数名称:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="ParameterNameTextBox" 
                     IsReadOnly="True"
                     Background="#FFE9ECEF"
                     Padding="8"
                     FontSize="14"/>
        </StackPanel>

        <!-- 单位设置 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="单位:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ComboBox x:Name="UnitComboBox" 
                          Grid.Row="0"
                          Padding="8"
                          FontSize="14"
                          SelectedIndex="0"
                          SelectionChanged="UnitComboBox_SelectionChanged">
                    <ComboBoxItem Content="无单位"/>
                    <ComboBoxItem Content="um"/>
                    <ComboBoxItem Content="mm"/>
                    <ComboBoxItem Content="pix"/>
                    <ComboBoxItem Content="其他"/>
                </ComboBox>
                <TextBox x:Name="CustomUnitTextBox" 
                         Grid.Row="1"
                         Padding="8"
                         FontSize="14"
                         Margin="0,5,0,0"
                         Visibility="Collapsed"
                         Text=""/>
            </Grid>
        </StackPanel>

        <!-- 范围设置 -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="可调范围:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="MinValueTextBox" 
                         Grid.Column="0"
                         Padding="8"
                         FontSize="14"
                         Text="0"/>
                <TextBlock Grid.Column="1" 
                           Text=" 至 " 
                           VerticalAlignment="Center" 
                           Margin="10,0"/>
                <TextBox x:Name="MaxValueTextBox" 
                         Grid.Column="2"
                         Padding="8"
                         FontSize="14"
                         Text="100"/>
            </Grid>
        </StackPanel>

        <!-- 精度设置 -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="最小粒度 (步长):" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="PrecisionComboBox" 
                      Padding="8"
                      FontSize="14"
                      SelectedIndex="2">
                <ComboBoxItem Content="1" Tag="1"/>
                <ComboBoxItem Content="0.1" Tag="0.1"/>
                <ComboBoxItem Content="0.01" Tag="0.01"/>
                <ComboBoxItem Content="0.001" Tag="0.001"/>
            </ComboBox>
        </StackPanel>

        <!-- 图片设置 -->
        <StackPanel Grid.Row="5" Margin="0,0,0,15">
            <TextBlock Text="示例图片:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="ImagePathTextBox" 
                         Grid.Column="0"
                         Padding="8"
                         FontSize="14"
                         IsReadOnly="True"/>
                <Button x:Name="BrowseImageButton" 
                        Grid.Column="1"
                        Content="浏览..."
                        Padding="15,8"
                        Margin="10,0,0,0"
                        Click="BrowseImageButton_Click"/>
            </Grid>
        </StackPanel>

        <!-- 描述设置 -->
        <StackPanel Grid.Row="6" Margin="0,0,0,15">
            <TextBlock Text="参数描述:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Padding="8"
                     FontSize="14"
                     MinHeight="120"/>
        </StackPanel>

        <!-- 按钮区 -->
        <StackPanel Grid.Row="7" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button x:Name="CancelButton" 
                   Content="取消" 
                   Padding="20,8"
                   Margin="0,0,10,0"
                   Background="#FF95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Click="CancelButton_Click"/>
            <Button x:Name="SaveButton" 
                   Content="保存" 
                   Padding="20,8"
                   Background="#FF27AE60"
                   Foreground="White"
                   BorderThickness="0"
                   Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 