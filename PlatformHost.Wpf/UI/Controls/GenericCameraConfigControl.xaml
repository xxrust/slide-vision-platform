<UserControl x:Class="WpfApp2.UI.Controls.GenericCameraConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="360" d:DesignWidth="460">
    <UserControl.Resources>
        <Style x:Key="SectionTitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF8FBCD4"/>
            <Setter Property="Margin" Value="0,6,0,8"/>
        </Style>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#FFECF0F1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,2,0,8"/>
            <Setter Property="Background" Value="#FF1E2D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3F5873"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
        </Style>
        <Style x:Key="InputComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,2,0,8"/>
            <Setter Property="Background" Value="#FF1E2D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3F5873"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <Style x:Key="VendorComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource InputComboBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="Black"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToggleCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2,0,8"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="#FF3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#FF27384A" CornerRadius="10" Padding="16">
        <StackPanel>
            <TextBlock Text="基础信息" Style="{StaticResource SectionTitleText}"/>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="厂商" Style="{StaticResource LabelText}"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="VendorComboBox" Style="{StaticResource VendorComboBoxStyle}"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="型号" Style="{StaticResource LabelText}"/>
                <TextBox Grid.Row="0" Grid.Column="4" x:Name="ModelTextBox" Style="{StaticResource InputTextBox}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="序列号" Style="{StaticResource LabelText}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" x:Name="SerialTextBox" Style="{StaticResource InputTextBox}"/>
            </Grid>

            <TextBlock Text="成像参数" Style="{StaticResource SectionTitleText}"/>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="曝光(us)" Style="{StaticResource LabelText}"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="ExposureTextBox" Style="{StaticResource InputTextBox}"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="增益" Style="{StaticResource LabelText}"/>
                <TextBox Grid.Row="0" Grid.Column="4" x:Name="GainTextBox" Style="{StaticResource InputTextBox}"/>
            </Grid>

            <TextBlock Text="触发参数" Style="{StaticResource SectionTitleText}"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="触发源" Style="{StaticResource LabelText}"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="TriggerSourceComboBox" Style="{StaticResource InputComboBox}"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="触发使能" Style="{StaticResource LabelText}"/>
                <CheckBox Grid.Row="0" Grid.Column="4" x:Name="TriggerEnableCheckBox" Content="启用" Style="{StaticResource ToggleCheckBox}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="触发延时(us)" Style="{StaticResource LabelText}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" x:Name="TriggerDelayTextBox" Style="{StaticResource InputTextBox}"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="ApplyButton" Content="应用配置" Style="{StaticResource PrimaryButton}"
                        Click="ApplyButton_Click" Grid.Column="0" HorizontalAlignment="Left"/>

                <TextBlock x:Name="StatusTextBlock" Grid.Column="1" Text="等待加载"
                           Foreground="#FF95A5A6" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
