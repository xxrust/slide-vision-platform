<UserControl x:Class="WpfApp2.UI.Controls.VirtualKeyboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="260" d:DesignWidth="520"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="KeyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF34495E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1ABC9C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FunctionButtonStyle" TargetType="Button" BasedOn="{StaticResource KeyButtonStyle}">
            <Setter Property="Background" Value="#FFE67E22"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource KeyButtonStyle}">
            <Setter Property="Background" Value="#FFE74C3C"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#FF1E2A36" CornerRadius="10" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 1) 数字 + 符号 -->
            <UniformGrid Grid.Row="0" Rows="1" Columns="12" Margin="0,0,0,6">
                <Button Style="{StaticResource KeyButtonStyle}" Content="1" Tag="1" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="2" Tag="2" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="3" Tag="3" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="4" Tag="4" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="5" Tag="5" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="6" Tag="6" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="7" Tag="7" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="8" Tag="8" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="9" Tag="9" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="0" Tag="0" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="-" Tag="-" Click="InsertKey_Click"/>
                <Button Style="{StaticResource FunctionButtonStyle}" Content="删除" Click="Backspace_Click"/>
            </UniformGrid>

            <!-- 2) QWERTY -->
            <UniformGrid Grid.Row="1" Rows="1" Columns="10" Margin="0,0,0,6">
                <Button Style="{StaticResource KeyButtonStyle}" Content="Q" Tag="Q" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="W" Tag="W" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="E" Tag="E" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="R" Tag="R" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="T" Tag="T" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="Y" Tag="Y" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="U" Tag="U" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="I" Tag="I" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="O" Tag="O" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="P" Tag="P" Click="InsertKey_Click"/>
            </UniformGrid>

            <!-- 3) ASDF -->
            <UniformGrid Grid.Row="2" Rows="1" Columns="9" Margin="0,0,0,6">
                <Button Style="{StaticResource KeyButtonStyle}" Content="A" Tag="A" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="S" Tag="S" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="D" Tag="D" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="F" Tag="F" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="G" Tag="G" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="H" Tag="H" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="J" Tag="J" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="K" Tag="K" Click="InsertKey_Click"/>
                <Button Style="{StaticResource KeyButtonStyle}" Content="L" Tag="L" Click="InsertKey_Click"/>
            </UniformGrid>

            <!-- 4) ZXCV + 功能 -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <UniformGrid Grid.Column="0" Rows="1" Columns="7">
                    <Button Style="{StaticResource KeyButtonStyle}" Content="Z" Tag="Z" Click="InsertKey_Click"/>
                    <Button Style="{StaticResource KeyButtonStyle}" Content="X" Tag="X" Click="InsertKey_Click"/>
                    <Button Style="{StaticResource KeyButtonStyle}" Content="C" Tag="C" Click="InsertKey_Click"/>
                    <Button Style="{StaticResource KeyButtonStyle}" Content="V" Tag="V" Click="InsertKey_Click"/>
                    <Button Style="{StaticResource KeyButtonStyle}" Content="B" Tag="B" Click="InsertKey_Click"/>
                    <Button Style="{StaticResource KeyButtonStyle}" Content="N" Tag="N" Click="InsertKey_Click"/>
                    <Button Style="{StaticResource KeyButtonStyle}" Content="M" Tag="M" Click="InsertKey_Click"/>
                </UniformGrid>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                    <Button Style="{StaticResource FunctionButtonStyle}" Content="←" Width="60" Click="MoveLeft_Click"/>
                    <Button Style="{StaticResource FunctionButtonStyle}" Content="→" Width="60" Click="MoveRight_Click"/>
                    <Button Style="{StaticResource DangerButtonStyle}" Content="清空" Width="80" Click="Clear_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>

