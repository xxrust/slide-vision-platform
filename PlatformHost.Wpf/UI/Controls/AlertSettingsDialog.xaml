<Window x:Class="WpfApp2.UI.Controls.AlertSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="告警设置" Height="580" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#FFAAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="158*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 基本设置 -->
        <GroupBox Grid.Row="0" Header="基本设置" Style="{StaticResource GroupBoxStyle}" Grid.ColumnSpan="3" Margin="5,5,5,5">
            <StackPanel>
                <CheckBox Name="EnableAlertCheckBox" Content="启用告警功能" 
                          Style="{StaticResource CheckBoxStyle}" FontWeight="Bold"/>

                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="统计周期:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="StatisticsCycleTextBox" 
                             Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="个样本" VerticalAlignment="Center" Margin="5,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="最小样本量:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="MinSampleSizeTextBox" 
                             Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="5,5,5,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="个样本" VerticalAlignment="Center" Margin="5,5,5,0"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- 告警策略 -->
        <GroupBox Grid.Row="1" Header="告警策略" Style="{StaticResource GroupBoxStyle}" Grid.ColumnSpan="3" Margin="5,5,5,5">
            <TextBlock Text="可选择单种策略或复合策略，勾选多个则同时生效" 
                       FontSize="11" Foreground="#FF666666" Margin="0,0,0,10"/>
        </GroupBox>

        <!-- 策略详细配置 -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="3" Margin="0,0,0,10" Grid.RowSpan="2">
            <StackPanel>
                <!-- 策略1：数量分析 -->
                <GroupBox Header="策略1：超限次数分析" Style="{StaticResource GroupBoxStyle}">
                    <StackPanel>
                        <CheckBox Name="EnableCountAnalysisCheckBox" Content="启用超限次数分析" 
                                  Style="{StaticResource CheckBoxStyle}"/>

                        <Grid Margin="20,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="超限次数阈值:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Name="OutOfRangeThresholdTextBox" 
                                     Style="{StaticResource TextBoxStyle}"/>
                            <TextBlock Grid.Column="2" Text="次" VerticalAlignment="Center" Margin="5,0"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- 策略2：过程能力分析 -->
                <GroupBox Header="策略2：过程能力分析" Style="{StaticResource GroupBoxStyle}">
                    <StackPanel>
                        <CheckBox Name="EnableProcessCapabilityCheckBox" Content="启用过程能力分析" 
                                  Style="{StaticResource CheckBoxStyle}"/>

                        <Grid Margin="20,5,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="CA 阈值:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="CAThresholdTextBox" 
                                     Style="{StaticResource TextBoxStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="(建议: 0.25)" VerticalAlignment="Center" 
                                       FontSize="10" Foreground="#FF666666" Margin="5,0"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="CP 阈值:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Name="CPThresholdTextBox" 
                                     Style="{StaticResource TextBoxStyle}" Margin="5,5,5,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="(建议: 1.0)" VerticalAlignment="Center" 
                                       FontSize="10" Foreground="#FF666666" Margin="5,5,5,0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="CPK 阈值:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Name="CPKThresholdTextBox" 
                                     Style="{StaticResource TextBoxStyle}" Margin="5,5,5,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="(建议: 1.0)" VerticalAlignment="Center" 
                                       FontSize="10" Foreground="#FF666666" Margin="5,5,5,0"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- 策略3：连续NG分析 -->
                <GroupBox Header="策略3：连续NG分析" Style="{StaticResource GroupBoxStyle}">
                    <StackPanel>
                        <CheckBox Name="EnableConsecutiveNGCheckBox" Content="启用连续NG分析" 
                                  Style="{StaticResource CheckBoxStyle}"/>

                        <Grid Margin="20,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="连续NG阈值:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Name="ConsecutiveNGThresholdTextBox" 
                                     Style="{StaticResource TextBoxStyle}"/>
                            <TextBlock Grid.Column="2" Text="次" VerticalAlignment="Center" Margin="5,0"/>
                        </Grid>

                        <TextBlock Text="注：复用程序内现有的连续NG计数功能" 
                                   FontSize="10" Foreground="#FF666666" Margin="20,5,0,0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- 按钮区域 -->
        <Grid Grid.Row="3" Margin="0,10,0,0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Name="OkButton" Content="确定" Width="80" Height="30" 
                    IsDefault="True" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Grid.Column="2" Name="CancelButton" Content="取消" Width="80" Height="30" 
                    IsCancel="True" Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window> 