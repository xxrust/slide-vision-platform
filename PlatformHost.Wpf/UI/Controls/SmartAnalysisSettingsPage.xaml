<UserControl x:Class="WpfApp2.UI.Controls.SmartAnalysisSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#FFAAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ChartButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="#FF4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Background="#2C3E50" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="BackButton" Content="← 返回"
                    Background="Transparent" Foreground="White" BorderThickness="0"
                    FontSize="14" Padding="10,0" VerticalAlignment="Center"
                    Click="BackButton_Click" Cursor="Hand"/>

            <TextBlock Grid.Column="1" Text="告警设置" FontSize="16" FontWeight="Bold"
                       Foreground="White" VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- 主体内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10,5">
            <StackPanel>
                <!-- 基本设置 -->
                <GroupBox Header="基本设置" Style="{StaticResource GroupBoxStyle}">
                    <StackPanel>
                        <CheckBox x:Name="EnableAlertCheckBox" Content="启用告警功能"
                                  Style="{StaticResource CheckBoxStyle}" FontWeight="Bold"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="统计周期:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="StatisticsCycleTextBox"
                                     Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="个样本"
                                       VerticalAlignment="Center" Margin="5,0"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="最小样本量:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="MinSampleSizeTextBox"
                                     Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="5,5,5,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="个样本"
                                       VerticalAlignment="Center" Margin="5,5,5,0"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- 策略组合管理 -->
                <GroupBox Header="策略组合管理" Style="{StaticResource GroupBoxStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左侧：组合列表 -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="策略组合" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ListBox x:Name="ProfileListBox" Height="220" SelectionChanged="ProfileListBox_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="★" Foreground="#FFC77A0A" Margin="0,0,4,0"
                                                       Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            <TextBlock Text="{Binding Name}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                                <Button Content="新增" Width="60" Height="26" Margin="0,0,5,0"
                                        Click="AddProfileButton_Click"/>
                                <Button Content="复制" Width="60" Height="26" Margin="0,0,5,0"
                                        Click="DuplicateProfileButton_Click"/>
                                <Button Content="删除" Width="60" Height="26"
                                        Click="DeleteProfileButton_Click"/>
                            </StackPanel>

                            <Button Content="设为默认" Width="190" Height="26" Margin="0,6,0,0"
                                    Click="SetDefaultProfileButton_Click"/>
                        </StackPanel>

                        <!-- 右侧：组合详情 -->
                        <StackPanel Grid.Column="2" x:Name="ProfileDetailsPanel">
                            <TextBlock Text="组合名称" FontWeight="SemiBold"/>
                            <TextBox x:Name="ProfileNameTextBox" Height="25" Margin="0,4,0,10"
                                     LostFocus="ProfileNameTextBox_LostFocus" KeyDown="ProfileNameTextBox_KeyDown"/>

                            <GroupBox Header="策略1：超限次数分析" Style="{StaticResource GroupBoxStyle}">
                                <StackPanel>
                                    <CheckBox x:Name="EnableCountAnalysisCheckBox" Content="启用超限次数分析"
                                              Style="{StaticResource CheckBoxStyle}"/>

                                    <Grid Margin="20,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="超限次数阈值:" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" x:Name="OutOfRangeThresholdTextBox"
                                                 Style="{StaticResource TextBoxStyle}"/>
                                        <TextBlock Grid.Column="2" Text="次" VerticalAlignment="Center" Margin="5,0"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="策略2：过程能力分析" Style="{StaticResource GroupBoxStyle}">
                                <StackPanel>
                                    <CheckBox x:Name="EnableProcessCapabilityCheckBox" Content="启用过程能力分析"
                                              Style="{StaticResource CheckBoxStyle}"/>

                                    <Grid Margin="20,5,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="75"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="CA 阈值:" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="CAThresholdTextBox"
                                                 Style="{StaticResource TextBoxStyle}"/>
                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="(建议: 0.25)" VerticalAlignment="Center"
                                                   FontSize="10" Foreground="#FF666666" Margin="5,0"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="CP 阈值:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="CPThresholdTextBox"
                                                 Style="{StaticResource TextBoxStyle}" Margin="5,5,5,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="(建议: 1.0)" VerticalAlignment="Center"
                                                   FontSize="10" Foreground="#FF666666" Margin="5,5,5,0"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="CPK 阈值:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="CPKThresholdTextBox"
                                                 Style="{StaticResource TextBoxStyle}" Margin="5,5,5,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="2" Text="(建议: 1.0)" VerticalAlignment="Center"
                                                   FontSize="10" Foreground="#FF666666" Margin="5,5,5,0"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="策略3：连续NG分析" Style="{StaticResource GroupBoxStyle}">
                                <StackPanel>
                                    <CheckBox x:Name="EnableConsecutiveNGCheckBox" Content="启用连续NG分析"
                                              Style="{StaticResource CheckBoxStyle}"/>

                                    <Grid Margin="20,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="连续NG阈值:" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" x:Name="ConsecutiveNGThresholdTextBox"
                                                 Style="{StaticResource TextBoxStyle}"/>
                                        <TextBlock Grid.Column="2" Text="次" VerticalAlignment="Center" Margin="5,0"/>
                                    </Grid>

                                    <TextBlock Text="注：复用程序内现有的连续NG计数功能"
                                               FontSize="10" Foreground="#FF666666" Margin="20,5,0,0"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- 项目绑定 -->
                <GroupBox Header="项目绑定" Style="{StaticResource GroupBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="将检测项目绑定到策略组合，未指定的项目将使用默认组合"
                                   Foreground="#FF666666" Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Button Content="刷新项目列表" Width="110" Height="26" Click="RefreshItemsButton_Click"/>
                            <TextBlock Text="(包含当前数据源以及已绑定项目)" Margin="10,4,0,0"
                                       Foreground="#FF666666" FontSize="11"/>
                        </StackPanel>

                        <Border BorderBrush="#FFE0E0E0" BorderThickness="1" CornerRadius="4">
                            <ListView x:Name="ItemAssignmentListView" Height="220" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListView.View>
                                    <GridView AllowsColumnReorder="False">
                                        <GridViewColumn Header="检测项目" Width="220" DisplayMemberBinding="{Binding ItemName}"/>
                                        <GridViewColumn Header="绑定策略组合" Width="220">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ProfileOptions}"
                                                              DisplayMemberPath="DisplayName" SelectedValuePath="Id"
                                                              SelectedValue="{Binding AssignedProfileId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              Width="200"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="10,10">
            <Button x:Name="SaveButton" Content="保存" Width="70" Height="30"
                    Style="{StaticResource ChartButtonStyle}" Click="SaveButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="取消" Width="70" Height="30"
                    Style="{StaticResource ChartButtonStyle}" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
