<Window x:Class="WpfApp2.UI.Controls.SmartInputTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WpfApp2.UI.Controls"
        Title="智能输入卡片测试" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="智能输入卡片功能测试" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- 测试区域 -->
        <StackPanel Grid.Row="1" Spacing="15">
            
            <!-- PKG设定宽度 -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="PKG设定宽度:" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="PkgWidthTextBox" Width="200" Height="30" Text="10.5"
                         controls:TextBoxSmartInputExtensions.EnableSmartInput="True"
                         controls:TextBoxSmartInputExtensions.ParameterName="PKG设定宽度"/>
                <TextBlock Text="mm" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- PKG设定高度 -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="PKG设定高度:" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="PkgHeightTextBox" Width="200" Height="30" Text="8.2"
                         controls:TextBoxSmartInputExtensions.EnableSmartInput="True"
                         controls:TextBoxSmartInputExtensions.ParameterName="PKG设定高度"/>
                <TextBlock Text="mm" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- 晶片设定宽度 -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="晶片设定宽度:" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="ChipWidthTextBox" Width="200" Height="30" Text="2500"
                         controls:TextBoxSmartInputExtensions.EnableSmartInput="True"
                         controls:TextBoxSmartInputExtensions.ParameterName="晶片设定宽度"/>
                <TextBlock Text="μm" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- 胶点设定直径 -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="胶点设定直径:" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="GluePointTextBox" Width="200" Height="30" Text="150"
                         controls:TextBoxSmartInputExtensions.EnableSmartInput="True"
                         controls:TextBoxSmartInputExtensions.ParameterName="胶点设定直径"/>
                <TextBlock Text="μm" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- 检测区域X坐标 -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="检测区域X坐标:" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="DetectionXTextBox" Width="200" Height="30" Text="100"
                         controls:TextBoxSmartInputExtensions.EnableSmartInput="True"
                         controls:TextBoxSmartInputExtensions.ParameterName="检测区域X坐标"/>
                <TextBlock Text="pixel" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- 阈值设定 -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="阈值设定:" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="ThresholdTextBox" Width="200" Height="30" Text="128"
                         controls:TextBoxSmartInputExtensions.EnableSmartInput="True"
                         controls:TextBoxSmartInputExtensions.ParameterName="阈值设定"/>
                <TextBlock Text="" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- 自定义参数（无预定义配置） -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="自定义参数:" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="CustomTextBox" Width="200" Height="30" Text="25.0"
                         controls:TextBoxSmartInputExtensions.EnableSmartInput="True"
                         controls:TextBoxSmartInputExtensions.ParameterName="自定义参数"/>
                <TextBlock Text="mm" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

        </StackPanel>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="获取所有值" Click="GetAllValues_Click" Width="100" Height="35" Margin="5"/>
            <Button Content="重置默认值" Click="ResetValues_Click" Width="100" Height="35" Margin="5"/>
            <Button Content="关闭窗口" Click="CloseWindow_Click" Width="100" Height="35" Margin="5"/>
        </StackPanel>

    </Grid>
</Window> 