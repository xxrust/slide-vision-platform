<Window x:Class="WpfApp2.UI.RemoteSourceSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.UI"
        mc:Ignorable="d"
        Title="模板与LOT号来源设置" Height="1000" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid Background="#FF020223">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="模板与LOT号来源设置" FontSize="24" Foreground="White"
                   HorizontalAlignment="Center" Margin="20"/>

        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,0">
            <StackPanel>
                <!-- 来源选择 -->
                <GroupBox Header="来源选择" Foreground="White" FontSize="14" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <RadioButton x:Name="LocalSourceRadio" Content="本地（手动设置）"
                                     Foreground="White" FontSize="14" Margin="0,5"
                                     Checked="SourceRadio_Checked"/>
                        <RadioButton x:Name="RemoteSourceRadio" Content="来自机台（远程文件监控）"
                                     Foreground="White" FontSize="14" Margin="0,5"
                                     Checked="SourceRadio_Checked"/>
                    </StackPanel>
                </GroupBox>

                <!-- 远程文件配置（仅在选择远程来源时显示） -->
                <GroupBox x:Name="RemoteConfigGroup" Header="远程文件配置" Foreground="White"
                          FontSize="14" Margin="0,0,0,15" Padding="10" Visibility="Collapsed">
                    <StackPanel>
                        <!-- LOT文件路径 -->
                        <TextBlock Text="LOT号文件路径:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Background="White" Padding="5">
                                <TextBox x:Name="LotFilePathTextBox" FontSize="14" VerticalAlignment="Center"
                                         Background="Transparent" BorderThickness="0"/>
                            </Border>
                            <Button Grid.Column="1" Content="浏览..." Width="70" Height="30" Margin="10,0,0,0"
                                    Click="BrowseLotFileButton_Click"/>
                        </Grid>
                        <TextBlock Text="示例: \\192.168.1.100\shared\lot.txt 或 ..\lot.txt"
                                   Foreground="Gray" FontSize="11" Margin="0,3,0,10"/>

                        <!-- 模板文件路径 -->
                        <TextBlock Text="模板名文件路径:" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Background="White" Padding="5">
                                <TextBox x:Name="TemplateFilePathTextBox" FontSize="14" VerticalAlignment="Center"
                                         Background="Transparent" BorderThickness="0"/>
                            </Border>
                            <Button Grid.Column="1" Content="浏览..." Width="70" Height="30" Margin="10,0,0,0"
                                    Click="BrowseTemplateFileButton_Click"/>
                        </Grid>
                        <TextBlock Text="示例: \\192.168.1.100\shared\template.txt 或 ..\template.txt"
                                   Foreground="Gray" FontSize="11" Margin="0,3,0,10"/>

                        <!-- 检测间隔 -->
                        <TextBlock Text="检测间隔（秒）:" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Background="White" Padding="5" Width="100" HorizontalAlignment="Left">
                            <TextBox x:Name="IntervalTextBox" FontSize="14" VerticalAlignment="Center"
                                     Background="Transparent" BorderThickness="0" Text="5"/>
                        </Border>

                        <!-- 文件格式说明 -->
                        <TextBlock Text="远程文件格式说明:" Foreground="White" FontSize="14" Margin="0,15,0,5"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Background="#FF1a1a3a" Padding="10">
                            <StackPanel>
                                <TextBlock Foreground="#FF00FF00" FontSize="12" FontFamily="Consolas" Margin="0,0,0,10">
                                    <Run Text="LOT文件 (lot.txt):"/><LineBreak/>
                                    <Run Text="17USK-87"/>
                                </TextBlock>
                                <TextBlock Foreground="#FF00FF00" FontSize="12" FontFamily="Consolas">
                                    <Run Text="模板文件 (template.txt):"/><LineBreak/>
                                    <Run Text="模板名称"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <TextBlock Text="说明: 每个文件只包含一行内容，LOT文件包含批次号，模板文件包含模板名称（不含.json）"
                                   Foreground="Gray" FontSize="11" Margin="0,5,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <!-- 当前状态 -->
                <GroupBox Header="当前状态" Foreground="White" FontSize="14" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="监控状态: " Foreground="White" FontSize="14"/>
                            <TextBlock x:Name="StatusText" Text="未启动" Foreground="Yellow" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="当前LOT: " Foreground="White" FontSize="14"/>
                            <TextBlock x:Name="CurrentLotText" Text="--" Foreground="Cyan" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="当前模板: " Foreground="White" FontSize="14"/>
                            <TextBlock x:Name="CurrentTemplateText" Text="--" Foreground="Cyan" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 测试按钮 -->
                <Button x:Name="TestButton" Content="测试连接" Width="120" Height="35"
                        Background="#FF2196F3" Foreground="White" FontSize="14"
                        HorizontalAlignment="Left" Click="TestButton_Click" IsEnabled="False"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button x:Name="SaveButton" Content="保存设置" Width="120" Height="40"
                    Background="Green" Foreground="White" FontSize="18"
                    Margin="0,0,20,0" Click="SaveButton_Click"/>

            <Button x:Name="CancelButton" Content="取消" Width="120" Height="40"
                    Background="Red" Foreground="White" FontSize="18"
                    Margin="20,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
