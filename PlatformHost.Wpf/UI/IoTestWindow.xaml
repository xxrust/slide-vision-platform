<Window x:Class="WpfApp2.UI.IoTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IO 设备测试" Height="620" Width="820"
        WindowStartupLocation="CenterOwner"
        Background="#FF2C3E50">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF34495E" CornerRadius="8" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="DeviceNameText" Text="IO 设备测试" FontSize="18" FontWeight="Bold" Foreground="#FF3498DB"/>
                    <TextBlock x:Name="DeviceMetaText" Text="" FontSize="12" Foreground="#FFBDC3C7" Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                        <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Fill="Gray" Margin="0,0,6,0"/>
                        <TextBlock x:Name="StatusText" Text="未连接" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                    <Button x:Name="ConnectButton" Content="连接" Width="80" Height="30" Margin="0,0,8,0"
                            Background="#FF27AE60" Foreground="White" FontWeight="Bold"
                            Click="ConnectButton_Click"/>
                    <Button x:Name="DisconnectButton" Content="断开" Width="80" Height="30"
                            Background="#FFE74C3C" Foreground="White" FontWeight="Bold"
                            Click="DisconnectButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#FF34495E" CornerRadius="8" Padding="16">
            <StackPanel>
                <TextBlock Text="IO 输出控制" FontSize="16" FontWeight="Bold" Foreground="#FF3498DB" Margin="0,0,0,16"/>

                <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,12">
                    <Border Background="#FF2C3E50" CornerRadius="6" Padding="12" Margin="6">
                        <StackPanel>
                            <TextBlock Text="O1" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Ellipse x:Name="O1Status" Width="12" Height="12" Fill="Gray" Margin="0,0,6,0"/>
                                <TextBlock x:Name="O1StatusText" Text="低电平" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="置位" Width="60" Height="26" Margin="0,0,8,0"
                                        Background="#FF27AE60" Foreground="White" FontWeight="Bold"
                                        Click="O1Set_Click"/>
                                <Button Content="复位" Width="60" Height="26"
                                        Background="#FFE74C3C" Foreground="White" FontWeight="Bold"
                                        Click="O1Reset_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Background="#FF2C3E50" CornerRadius="6" Padding="12" Margin="6">
                        <StackPanel>
                            <TextBlock Text="O2" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Ellipse x:Name="O2Status" Width="12" Height="12" Fill="Gray" Margin="0,0,6,0"/>
                                <TextBlock x:Name="O2StatusText" Text="低电平" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="置位" Width="60" Height="26" Margin="0,0,8,0"
                                        Background="#FF27AE60" Foreground="White" FontWeight="Bold"
                                        Click="O2Set_Click"/>
                                <Button Content="复位" Width="60" Height="26"
                                        Background="#FFE74C3C" Foreground="White" FontWeight="Bold"
                                        Click="O2Reset_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Background="#FF2C3E50" CornerRadius="6" Padding="12" Margin="6">
                        <StackPanel>
                            <TextBlock Text="O3" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Ellipse x:Name="O3Status" Width="12" Height="12" Fill="Gray" Margin="0,0,6,0"/>
                                <TextBlock x:Name="O3StatusText" Text="低电平" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="置位" Width="60" Height="26" Margin="0,0,8,0"
                                        Background="#FF27AE60" Foreground="White" FontWeight="Bold"
                                        Click="O3Set_Click"/>
                                <Button Content="复位" Width="60" Height="26"
                                        Background="#FFE74C3C" Foreground="White" FontWeight="Bold"
                                        Click="O3Reset_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Background="#FF2C3E50" CornerRadius="6" Padding="12" Margin="6">
                        <StackPanel>
                            <TextBlock Text="O4" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Ellipse x:Name="O4Status" Width="12" Height="12" Fill="Gray" Margin="0,0,6,0"/>
                                <TextBlock x:Name="O4StatusText" Text="低电平" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="置位" Width="60" Height="26" Margin="0,0,8,0"
                                        Background="#FF27AE60" Foreground="White" FontWeight="Bold"
                                        Click="O4Set_Click"/>
                                <Button Content="复位" Width="60" Height="26"
                                        Background="#FFE74C3C" Foreground="White" FontWeight="Bold"
                                        Click="O4Reset_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="RefreshButton" Content="刷新状态" Width="90" Height="28" Margin="0,0,8,0"
                            Background="#FF3498DB" Foreground="White" FontWeight="Bold"
                            Click="RefreshButton_Click"/>
                    <Button x:Name="ResetAllButton" Content="全部复位" Width="90" Height="28"
                            Background="#FF95A5A6" Foreground="White" FontWeight="Bold"
                            Click="ResetAllButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="CloseButton" Content="关闭" Width="90" Height="30"
                    Background="#FF95A5A6" Foreground="White" FontWeight="Bold"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
