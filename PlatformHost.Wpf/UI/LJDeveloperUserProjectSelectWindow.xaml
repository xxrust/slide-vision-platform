<Window x:Class="WpfApp2.UI.LJDeveloperUserProjectSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择LJ Developer项目"
        Height="480"
        Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF2C3E50">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="请选择一个项目文件夹"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="将自动定位到该项目的 source 目录"
                       FontSize="12"
                       Foreground="#FFBDC3C7"
                       HorizontalAlignment="Center"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#FF34495E" CornerRadius="8" Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="ProjectsPanel"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"/>
            </ScrollViewer>
        </Border>

        <Button Grid.Row="2"
                Content="取消"
                Click="CancelButton_Click"
                Width="120"
                Height="36"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Background="#FF95A5A6"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"/>
    </Grid>
</Window>

