<Window x:Class="WpfApp2.UI.TrayDetectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WpfApp2.UI.Controls"
        Title="Tray 检测界面"
        Width="1100"
        Height="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,8">
            <WrapPanel Margin="0,0,0,6" VerticalAlignment="Center">
                <TextBlock Text="行数" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBox x:Name="RowsBox" Width="60" Margin="0,0,12,0"/>
                <TextBlock Text="列数" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBox x:Name="ColsBox" Width="60" Margin="0,0,12,0"/>
                <TextBlock Text="批次" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBox x:Name="BatchBox" Width="180" Margin="0,0,12,0"/>
                <Button x:Name="StartButton" Content="开始托盘" Width="90" Margin="0,0,6,0" Click="StartButton_Click"/>
                <Button x:Name="CompleteButton" Content="完成托盘" Width="90" Margin="0,0,6,0" Click="CompleteButton_Click"/>
                <Button x:Name="ResetButton" Content="重置" Width="70" Click="ResetButton_Click"/>
            </WrapPanel>

            <WrapPanel VerticalAlignment="Center">
                <CheckBox x:Name="ShowOkCheck" Content="显示OK" IsChecked="True" Margin="0,0,12,0"
                          Checked="ShowOkCheck_Changed" Unchecked="ShowOkCheck_Changed"/>
                <CheckBox x:Name="RotateCheck" Content="旋转90°" Margin="0,0,12,0"
                          Checked="RotateCheck_Changed" Unchecked="RotateCheck_Changed"/>
                <TextBlock Text="图标目录" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBox x:Name="IconFolderBox" Width="260" Margin="0,0,6,0"/>
                <Button x:Name="BrowseIconButton" Content="浏览" Width="60" Margin="0,0,12,0"
                        Click="BrowseIconButton_Click"/>
                <Button x:Name="NgBrowserButton" Content="NG 浏览" Width="90" Margin="0,0,6,0"
                        Click="NgBrowserButton_Click"/>
                <Button x:Name="HelpButton" Content="说明" Width="70" Click="HelpButton_Click"/>
            </WrapPanel>
        </StackPanel>

        <controls:TrayGridControl x:Name="TrayGrid" Grid.Row="1" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <TextBlock Text="总数:" Margin="0,0,4,0" VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalText" Width="50" VerticalAlignment="Center"/>
            <TextBlock Text="OK:" Margin="8,0,4,0" VerticalAlignment="Center"/>
            <TextBlock x:Name="OkText" Width="50" VerticalAlignment="Center"/>
            <TextBlock Text="NG:" Margin="8,0,4,0" VerticalAlignment="Center"/>
            <TextBlock x:Name="NgText" Width="50" VerticalAlignment="Center"/>
            <TextBlock Text="良率:" Margin="8,0,4,0" VerticalAlignment="Center"/>
            <TextBlock x:Name="YieldText" Width="80" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
