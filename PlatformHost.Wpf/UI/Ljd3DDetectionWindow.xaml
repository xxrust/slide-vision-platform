<Window x:Class="WpfApp2.UI.Ljd3DDetectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.UI"
        mc:Ignorable="d"
        Title="基恩士3D检测系统" Height="900" Width="1600" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 顶部参数设置按钮栏 - 横向排列 -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#FF2C3E50" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- 左侧参数设置按钮组 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                    <Button x:Name="btn_SetToolParameter" Content="设定工具参数" Height="40" Width="120"
                            Background="#FF3498DB" Foreground="White" FontSize="12" FontWeight="Bold"
                            Margin="10,0" Click="btn_SetToolParameter_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button x:Name="btn_SetJudgement" Content="设定判定对象" Height="40" Width="120"
                            Background="#FF27AE60" Foreground="White" FontSize="12" FontWeight="Bold"
                            Margin="10,0" Click="btn_SetJudgement_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button x:Name="btn_SetDataExport" Content="设定输出对象" Height="40" Width="120"
                            Background="#FFF39C12" Foreground="White" FontSize="12" FontWeight="Bold"
                            Margin="10,0" Click="btn_SetDataExport_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                
                <!-- 右侧返回按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Button x:Name="btn_Return" Content="返回" Height="40" Width="80" 
                            Background="#FFE74C3C" Foreground="White" FontSize="14" FontWeight="Bold"
                            Margin="10,0" Click="btn_Return_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 左侧控制面板 -->
        <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Background="#FFF0F0F0" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <!-- 项目配置 -->
                    <GroupBox Header="项目配置" Margin="0,0,0,10">
                        <StackPanel>
                            <Label Content="项目名" />
                            <TextBox x:Name="tbx_ProjectName" Height="25" Text="" IsReadOnly="True" Background="#FFE0E0E0"/>
                            
                            <Label Content="项目文件夹" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="60" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="tbx_ProjectFolder" Grid.Column="0" Height="50" TextWrapping="Wrap" 
                                         Text="D:\KEYENCE\LJ Navigator\Program" IsReadOnly="True"/>
                                <Button x:Name="btn_SelectProjectFolder" Grid.Column="1" Content="浏览..." 
                                        Height="25" Margin="5,12,0,13" Click="btn_SelectProjectFolder_Click"/>
                            </Grid>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <CheckBox x:Name="cb_ReCompile" Content="重新编译"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- 系统控制 -->
                    <GroupBox Header="系统控制" Margin="0,0,0,10">
                        <StackPanel>
                            <Button x:Name="btn_Run" Content="启动系统" Height="35" Background="#FF0068FF" 
                                    Foreground="White" Margin="0,5" Click="btn_Run_Click"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Button x:Name="btn_StartImageReceiving" Content="连接" Width="80" 
                                        Margin="0,0,5,0" Click="btn_StartImageReceiving_Click"/>
                                <Button x:Name="btn_StartMeasure" Content="触发" Width="80" 
                                        Margin="0,0,5,0" Click="btn_StartMeasure_Click"/>
                                <Button x:Name="btn_StopImageReceiving" Content="断开" Width="80" 
                                        Click="btn_StopImageReceiving_Click"/>
                            </StackPanel>
                            
                            <Label Content="返回值:" />
                            <Label x:Name="lbl_ReturnCode" Content="----" Background="#FFE0E0E0" Height="25"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- 本地图像测试 -->
                    <GroupBox Header="本地图像测试" Margin="0,0,0,10">
                        <StackPanel>
                            <Label Content="选择测试图像文件" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="60" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="tbx_SelectedImageFile" Grid.Column="0" Height="40" TextWrapping="Wrap" 
                                         IsReadOnly="True" ToolTip="选择height_或gray_开头的图像文件，系统会自动找到配对的图像"/>
                                <Button x:Name="btn_SelectTestImage" Grid.Column="1" Content="浏览..." 
                                        Height="25" Margin="5,7,0,8" Click="btn_SelectTestImage_Click"/>
                            </Grid>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Button x:Name="btn_ExecuteLocalImage" Content="执行本地图像检测" Width="140" Height="30"
                                        Background="#FF27AE60" Foreground="White"
                                        Click="btn_ExecuteLocalImage_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- 检测结果 -->
                    <GroupBox Header="检测结果" Margin="0,0,0,10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Label Content="执行次数:" />
                                <Label x:Name="lbl_ExecuteCount" Content="0" />
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Label Content="执行时间:" />
                                <Label x:Name="lbl_ExecuteTimeCost" Content="0.0 ms" />
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="总体判定:" />
                                <Label x:Name="lbl_JudgeAll" Content="--" Width="60" Height="35" 
                                       Background="#FFB4B4B4" Foreground="White" FontWeight="Bold" 
                                       FontSize="18" HorizontalContentAlignment="Center" 
                                       VerticalContentAlignment="Center"/>
                            </StackPanel>
                            
                            <Label Content="详细结果:" />
                            <TextBox x:Name="tbx_ExecuteResultText" Height="120" TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- 右侧显示区域 - 左右布局适应宽屏 -->
        <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- 2D视图 -->
            <GroupBox Grid.Column="0" Header="2D视图" Margin="0,0,5,0">
                <WindowsFormsHost x:Name="_2DViewHost"/>
            </GroupBox>
            
            <!-- 3D视图 -->
            <GroupBox Grid.Column="1" Header="3D视图" Margin="5,0,0,0">
                <WindowsFormsHost x:Name="_3DViewHost"/>
            </GroupBox>
        </Grid>
    </Grid>
</Window> 
