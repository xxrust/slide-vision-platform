<Page x:Class="WpfApp2.UI.HardwareConfigPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:WpfApp2.UI.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1920"
      Title="硬件配置">

    <Grid Background="#FF2C3E50">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Background="#FF34495E">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="⚙️" FontSize="24" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="硬件配置" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- 导航按钮组 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                <!-- 返回按钮 -->
                <Button x:Name="BackButton" Content="← 返回" 
                        Click="BackButton_Click" 
                        Background="#FFE74C3C" 
                        Foreground="White" 
                        BorderThickness="1" 
                        BorderBrush="White"
                        Padding="20,12"
                        FontSize="16" 
                        FontWeight="Bold"
                        VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="{TemplateBinding BorderBrush}">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.3"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFC0392B"/>
                                    <Setter Property="BorderBrush" Value="#FFECF0F1"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FFA93226"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：相机配置列表（支持分页） -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ItemsControl x:Name="CameraItemsControl" Grid.Row="0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="0,0,15,15"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FF34495E" CornerRadius="10" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="0.3"/>
                                </Border.Effect>

                                <StackPanel>
                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                                            <TextBlock Text="📷" FontSize="18" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="🔄" Width="30" Height="30" Margin="10,0,0,0"
                                                Background="#FF3498DB" Foreground="White" FontSize="12" FontWeight="Bold"
                                                Click="RefreshCameraButton_Click" VerticalAlignment="Center"/>
                                    </Grid>

                                    <Border Background="#FF2C3E50" CornerRadius="8" Padding="15">
                                        <controls:GenericCameraConfigControl CameraId="{Binding Id}" DisplayName="{Binding Name}" Height="800" HorizontalAlignment="Stretch"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="PrevCameraPageButton" Content="← 上一页"
                            Background="#FF3498DB" Foreground="White" Padding="14,6" Margin="0,0,12,0"
                            Click="PrevCameraPageButton_Click"/>
                    <TextBlock x:Name="CameraPageTextBlock" Text="第 1 / 1 页" Foreground="White" VerticalAlignment="Center" FontSize="14"/>
                    <Button x:Name="NextCameraPageButton" Content="下一页 →"
                            Background="#FF3498DB" Foreground="White" Padding="14,6" Margin="12,0,0,0"
                            Click="NextCameraPageButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- 右侧：IO控制 -->
            <Border Grid.Column="2" Background="#FF34495E" CornerRadius="10" Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>
                
                <StackPanel>
                    <TextBlock Text="🔌 IO控制" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>
                    
                    <!-- IO控制和状态显示 -->
                    <Border Background="#FF2C3E50" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="🔗 IO输出控制" FontSize="16" FontWeight="Bold" Foreground="#FF3498DB" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                            
                            <!-- 状态图例说明 -->
                            <Border Background="#FF34495E" CornerRadius="6" Padding="12,8" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="状态指示" FontSize="12" FontWeight="Bold" Foreground="#FF3498DB" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                                            <Ellipse Width="12" Height="12" Fill="Lime" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <TextBlock Text="高电平" FontSize="10" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                                            <Ellipse Width="12" Height="12" Fill="Red" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <TextBlock Text="低电平" FontSize="10" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="12" Height="12" Fill="Gray" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <TextBlock Text="连接失败" FontSize="10" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <!-- IO控制区域 -->
                            <StackPanel HorizontalAlignment="Center">
                                <!-- O0 (原IO1) - 检测状态输出 -->
                                <Border Background="#FF34495E" CornerRadius="6" Padding="10" Margin="0,5">
                                    <Grid Width="340">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Grid.Row="0" Text="O0" Foreground="#FF3498DB" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Grid.Column="1" Grid.Row="0" Text="检测状态输出" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                                        <Button Grid.Column="2" Grid.Row="0" x:Name="IO1SetButton" Content="置位" Height="28" Margin="2,0"
                                                Background="#FF27AE60" Foreground="White" FontSize="11" FontWeight="Bold" Click="IO1SetButton_Click"/>
                                        <Button Grid.Column="3" Grid.Row="0" x:Name="IO1ResetButton" Content="复位" Height="28" Margin="2,0"
                                                Background="#FFE74C3C" Foreground="White" FontSize="11" FontWeight="Bold" Click="IO1ResetButton_Click"/>
                                        
                                        <!-- 状态指示灯 -->
                                        <Border Grid.Column="4" Grid.Row="0" Background="#FF1E2D3D" CornerRadius="20" Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Ellipse x:Name="IO1StatusLight" Width="28" Height="28" Fill="#FF95A5A6" VerticalAlignment="Center" HorizontalAlignment="Center" Stroke="White" StrokeThickness="3">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="1.0"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Border>
                                        
                                        <TextBlock Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1" Text="1→检测完成  0→检测中  ●状态指示灯" 
                                                   Foreground="#FFBDC3C7" FontSize="10" FontStyle="Italic" Margin="0,3,0,0"/>
                                    </Grid>
                                </Border>
                                
                                <!-- O1 (原IO2) - 结果输出 -->
                                <Border Background="#FF34495E" CornerRadius="6" Padding="10" Margin="0,5">
                                    <Grid Width="340">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Grid.Row="0" Text="O1" Foreground="#FF27AE60" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Grid.Column="1" Grid.Row="0" Text="检测结果输出" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                                        <Button Grid.Column="2" Grid.Row="0" x:Name="IO2SetButton" Content="置位" Height="28" Margin="2,0"
                                                Background="#FF27AE60" Foreground="White" FontSize="11" FontWeight="Bold" Click="IO2SetButton_Click"/>
                                        <Button Grid.Column="3" Grid.Row="0" x:Name="IO2ResetButton" Content="复位" Height="28" Margin="2,0"
                                                Background="#FFE74C3C" Foreground="White" FontSize="11" FontWeight="Bold" Click="IO2ResetButton_Click"/>
                                        
                                        <!-- 状态指示灯 -->
                                        <Border Grid.Column="4" Grid.Row="0" Background="#FF1E2D3D" CornerRadius="20" Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Ellipse x:Name="IO2StatusLight" Width="28" Height="28" Fill="#FF95A5A6" VerticalAlignment="Center" HorizontalAlignment="Center" Stroke="White" StrokeThickness="3">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="1.0"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Border>
                                        
                                        <TextBlock Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1" Text="1→OK结果  0→NG结果  ●状态指示灯" 
                                                   Foreground="#FFBDC3C7" FontSize="10" FontStyle="Italic" Margin="0,3,0,0"/>
                                    </Grid>
                                </Border>
                                
                                <!-- O2 (原IO3) - 单项NG超限 -->
                                <Border Background="#FF34495E" CornerRadius="6" Padding="10" Margin="0,5">
                                    <Grid Width="340">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Grid.Row="0" Text="O2" Foreground="#FFF39C12" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Grid.Column="1" Grid.Row="0" Text="NG超限警告" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                                        <Button Grid.Column="2" Grid.Row="0" x:Name="IO3SetButton" Content="置位" Height="28" Margin="2,0"
                                                Background="#FF27AE60" Foreground="White" FontSize="11" FontWeight="Bold" Click="IO3SetButton_Click"/>
                                        <Button Grid.Column="3" Grid.Row="0" x:Name="IO3ResetButton" Content="复位" Height="28" Margin="2,0"
                                                Background="#FFE74C3C" Foreground="White" FontSize="11" FontWeight="Bold" Click="IO3ResetButton_Click"/>
                                        
                                        <!-- 状态指示灯 -->
                                        <Border Grid.Column="4" Grid.Row="0" Background="#FF1E2D3D" CornerRadius="20" Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Ellipse x:Name="IO3StatusLight" Width="28" Height="28" Fill="#FF95A5A6" VerticalAlignment="Center" HorizontalAlignment="Center" Stroke="White" StrokeThickness="3">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="1.0"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Border>
                                        
                                        <TextBlock Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1" Text="单项NG超限告警  ●状态指示灯" 
                                                   Foreground="#FFBDC3C7" FontSize="10" FontStyle="Italic" Margin="0,3,0,0"/>
                                    </Grid>
                                </Border>
                                
                                <!-- O3 (原IO4) - 功能待定 -->
                                <Border Background="#FF34495E" CornerRadius="6" Padding="10" Margin="0,5">
                                    <Grid Width="340">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Grid.Row="0" Text="O3" Foreground="#FF9B59B6" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Grid.Column="1" Grid.Row="0" Text="功能扩展输出" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                                        <Button Grid.Column="2" Grid.Row="0" x:Name="IO4SetButton" Content="置位" Height="28" Margin="2,0"
                                                Background="#FF27AE60" Foreground="White" FontSize="11" FontWeight="Bold" Click="IO4SetButton_Click"/>
                                        <Button Grid.Column="3" Grid.Row="0" x:Name="IO4ResetButton" Content="复位" Height="28" Margin="2,0"
                                                Background="#FFE74C3C" Foreground="White" FontSize="11" FontWeight="Bold" Click="IO4ResetButton_Click"/>
                                        
                                        <!-- 状态指示灯 -->
                                        <Border Grid.Column="4" Grid.Row="0" Background="#FF1E2D3D" CornerRadius="20" Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Ellipse x:Name="IO4StatusLight" Width="28" Height="28" Fill="#FF95A5A6" VerticalAlignment="Center" HorizontalAlignment="Center" Stroke="White" StrokeThickness="3">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="1.0"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Border>
                                        
                                        <TextBlock Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1" Text="功能待定  ●状态指示灯" 
                                                   Foreground="#FFBDC3C7" FontSize="10" FontStyle="Italic" Margin="0,3,0,0"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 快捷控制 -->
                    <Border Background="#FF2C3E50" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="⚡ 快捷控制" FontSize="16" FontWeight="Bold" Foreground="#FF3498DB" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                            
                            <!-- 控制按钮 - 一行排列 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="GPIOSettingsButton" Content="GPIO设置" Width="65" Height="28" Margin="3"
                                        Background="#FF9B59B6" Foreground="White" FontWeight="Bold" FontSize="11" Click="GPIOSettingsButton_Click"/>
                                
                                <Button x:Name="AllResetButton" Content="全部复位" Width="65" Height="28" Margin="3"
                                        Background="#FFE74C3C" Foreground="White" FontWeight="Bold" FontSize="11" Click="AllResetButton_Click"/>
                                
                                <Button x:Name="OKOutputButton" Content="OK输出" Width="65" Height="28" Margin="3"
                                        Background="#FF27AE60" Foreground="White" FontWeight="Bold" FontSize="11" Click="OKOutputButton_Click"/>
                                
                                <Button x:Name="NGOutputButton" Content="NG输出" Width="65" Height="28" Margin="3"
                                        Background="#FFF39C12" Foreground="White" FontWeight="Bold" FontSize="11" Click="NGOutputButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- PLC状态监控 -->
                    <Border Background="#FF2C3E50" CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="🔗 PLC状态监控" FontSize="16" FontWeight="Bold" Foreground="#FF3498DB" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                            
                            <!-- PLC继电器状态显示 - 一行排列 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- R002 - 准备检测 -->
                                <Border Background="#FF34495E" CornerRadius="6" Padding="8" Margin="3">
                                    <StackPanel HorizontalAlignment="Center" Width="85">
                                        <TextBlock Text="R002" Foreground="#FF3498DB" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="准备检测" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" Margin="0,4,0,8"/>
                                        
                                        <!-- 状态指示灯 -->
                                        <Border Background="#FF1E2D3D" CornerRadius="20" Width="40" Height="40" HorizontalAlignment="Center">
                                            <Ellipse x:Name="R002StatusLight" Width="28" Height="28" Fill="#FF95A5A6" VerticalAlignment="Center" HorizontalAlignment="Center" Stroke="White" StrokeThickness="3">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="1.0"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Border>
                                    </StackPanel>
                                </Border>
                                
                                <!-- R003 - 到达下CCD -->
                                <Border Background="#FF34495E" CornerRadius="6" Padding="8" Margin="3">
                                    <StackPanel HorizontalAlignment="Center" Width="85">
                                        <TextBlock Text="R003" Foreground="#FF27AE60" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="到达下CCD" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" Margin="0,4,0,8"/>
                                        
                                        <!-- 状态指示灯 -->
                                        <Border Background="#FF1E2D3D" CornerRadius="20" Width="40" Height="40" HorizontalAlignment="Center">
                                            <Ellipse x:Name="R003StatusLight" Width="28" Height="28" Fill="#FF95A5A6" VerticalAlignment="Center" HorizontalAlignment="Center" Stroke="White" StrokeThickness="3">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="1.0"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Border>
                                    </StackPanel>
                                </Border>
                                
                                <!-- R004 - 到达CCD4 -->
                                <Border Background="#FF34495E" CornerRadius="6" Padding="8" Margin="3">
                                    <StackPanel HorizontalAlignment="Center" Width="85">
                                        <TextBlock Text="R004" Foreground="#FFF39C12" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="到达CCD4" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" Margin="0,4,0,8"/>
                                        
                                        <!-- 状态指示灯 -->
                                        <Border Background="#FF1E2D3D" CornerRadius="20" Width="40" Height="40" HorizontalAlignment="Center">
                                            <Ellipse x:Name="R004StatusLight" Width="28" Height="28" Fill="#FF95A5A6" VerticalAlignment="Center" HorizontalAlignment="Center" Stroke="White" StrokeThickness="3">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="1.0"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page> 
