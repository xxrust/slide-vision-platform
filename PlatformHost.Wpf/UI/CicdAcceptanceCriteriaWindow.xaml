<Window x:Class="WpfApp2.UI.CicdAcceptanceCriteriaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="验收标准与CICD"
        Width="1100"
        Height="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock Text="验收标准与CICD（与模板绑定）"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>

            <WrapPanel Margin="0,0,0,8">
                <TextBlock Text="模板："
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox x:Name="TemplateComboBox"
                          Width="260"
                          SelectionChanged="TemplateComboBox_SelectionChanged"
                          Margin="0,0,20,0"/>

                <TextBlock Text="当前标准："
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox x:Name="ActiveStandardComboBox"
                          Width="260"
                          MaxDropDownHeight="160"
                          DisplayMemberPath="Name"
                          SelectionChanged="ActiveStandardComboBox_SelectionChanged"/>
            </WrapPanel>

            <WrapPanel>
                <Button Content="新建标准"
                        Width="100"
                        Margin="0,0,6,0"
                        Click="NewStandardButton_Click"/>
                <Button Content="复制标准"
                        Width="100"
                        Margin="0,0,6,0"
                        Click="CopyStandardButton_Click"/>
                <Button Content="重命名"
                        Width="90"
                        Margin="0,0,6,0"
                        Click="RenameStandardButton_Click"/>
                <Button Content="删除"
                        Width="90"
                        Click="DeleteStandardButton_Click"/>
            </WrapPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Header="标准列表（全局，可直接编辑）">
                <DataGrid x:Name="StandardsDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          SelectionChanged="StandardsDataGrid_SelectionChanged"
                          MaxHeight="190"
                          ItemsSource="{Binding Standards}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="标准名称" Binding="{Binding Name}" IsReadOnly="True" Width="2*"/>
                        <DataGridTextColumn Header="允许OK/NG不一致数" Binding="{Binding AllowedOkNgMismatchCount, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="允许分类不一致数" Binding="{Binding AllowedDefectTypeMismatchCount, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="允许极差不一致项数" Binding="{Binding AllowedNumericRangeMismatchCount, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="默认极差容差(绝对)" Binding="{Binding NumericRangeToleranceAbs, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="默认极差容差(比例)" Binding="{Binding NumericRangeToleranceRatio, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="检测项容差（当前标准）" Margin="0,10,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Margin="0,0,0,6"
                               Foreground="#FF666666"
                               Text="{Binding AvailableItemNames.Count, StringFormat=可用检测项数: {0}}"/>

                    <DataGrid x:Name="ItemToleranceDataGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              ItemsSource="{Binding ItemToleranceRows}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="检测项" Binding="{Binding ItemName}" IsReadOnly="True" Width="2*"/>
                            <DataGridTextColumn Header="容差(绝对)" Binding="{Binding ToleranceAbs, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                            <DataGridTextColumn Header="容差(比例)" Binding="{Binding ToleranceRatio, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="保存" Width="90" Margin="0,0,8,0" Click="SaveButton_Click"/>
            <Button Content="关闭" Width="90" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
