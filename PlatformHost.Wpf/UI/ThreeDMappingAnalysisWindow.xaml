<Window x:Class="WpfApp2.UI.ThreeDMappingAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D映射分析"
        Height="813"
        Width="980"
        WindowStartupLocation="CenterOwner"
        Background="#1F2A36">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock Text="3D映射分析" FontSize="20" FontWeight="Bold" Foreground="White" />
            <TextBlock x:Name="StatusText"
                       Text="等待检测数据..."
                       FontSize="12"
                       Foreground="#D0D0D0"
                       Margin="0,4,0,0" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="2D参数 (像素系)" Grid.Column="0" Margin="0,0,8,0" Background="#243447" Foreground="White">
                <StackPanel Margin="8">
                    <TextBlock x:Name="PixelSizeText" Foreground="#D0D0D0" Margin="0,0,0,4" />
                    <TextBlock x:Name="PkgCenter2DText" Foreground="#D0D0D0" Margin="0,0,0,4" />
                    <TextBlock x:Name="ChipCenterText" Foreground="#D0D0D0" Margin="0,0,0,4" />
                    <TextBlock x:Name="ChipSizeText" Foreground="#D0D0D0" Margin="0,0,0,4" />
                    <TextBlock x:Name="ChipAngleText" Foreground="#D0D0D0" Margin="0,0,0,4" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="3D参数 (毫米系)" Grid.Column="1" Background="#243447" Foreground="White">
                <StackPanel Margin="8">
                    <TextBlock x:Name="PkgCenter3DText" Foreground="#D0D0D0" Margin="0,0,0,4" />
                    <TextBlock x:Name="PkgLineText" Foreground="#D0D0D0" Margin="0,0,0,4" />
                    <TextBlock x:Name="PkgAngleText" Foreground="#D0D0D0" Margin="0,0,0,4" />
                    <TextBlock x:Name="ChipPlaneText" Foreground="#D0D0D0" Margin="0,0,0,4" />
                    <TextBlock x:Name="RefPlaneText" Foreground="#D0D0D0" Margin="0,0,0,4" />
                </StackPanel>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <GroupBox Header="四角映射与高度" Background="#243447" Foreground="White" Margin="0,0,0,37">
                <ListView x:Name="CornerListView"
                          Margin="8,0,8,0"
                          Background="White"
                          Foreground="#222"
                          BorderThickness="0"
                          SelectionMode="Single">
                    <ListView.Resources>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Background" Value="#E6E6E6" />
                            <Setter Property="Foreground" Value="#222" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Padding" Value="6,4" />
                        </Style>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Foreground" Value="#222" />
                            <Setter Property="Background" Value="White" />
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="MinHeight" Value="26" />
                            <Setter Property="Padding" Value="4,2" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#D6E4FF" />
                                    <Setter Property="Foreground" Value="#000" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="角点" Width="90" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="2D X (px)" Width="110" DisplayMemberBinding="{Binding X2DPixel, StringFormat=F2}" />
                            <GridViewColumn Header="2D Y (px)" Width="110" DisplayMemberBinding="{Binding Y2DPixel, StringFormat=F2}" />
                            <GridViewColumn Header="3D X (mm)" Width="110" DisplayMemberBinding="{Binding X3D, StringFormat=F4}" />
                            <GridViewColumn Header="3D Y (mm)" Width="110" DisplayMemberBinding="{Binding Y3D, StringFormat=F4}" />
                            <GridViewColumn Header="晶片高度 (mm)" Width="140" DisplayMemberBinding="{Binding ChipHeight, StringFormat=F4}" />
                            <GridViewColumn Header="参考高度 (mm)" Width="140" DisplayMemberBinding="{Binding RefHeight, StringFormat=F4}" />
                            <GridViewColumn Header="相对高度 (mm)" Width="140" DisplayMemberBinding="{Binding RelativeHeight, StringFormat=F4}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <!-- 临时屏蔽灰度图显示区域 -->
            <GroupBox Grid.Row="1" Header="灰度图与角点映射" Background="#243447" Foreground="White" Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="GrayImage"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           SnapsToDevicePixels="True"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           SizeChanged="GrayImage_SizeChanged"
                           Grid.ColumnSpan="4" />
                    <Canvas x:Name="CornerCanvas" IsHitTestVisible="False" Height="290" VerticalAlignment="Bottom" Grid.ColumnSpan="4" />
                    <TextBlock x:Name="GrayImageStatus"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="8,8,0,0"
                               Foreground="#D0D0D0"
                               Background="#80000000"
                               Padding="6,3"
                               Text="未加载灰度图" Height="21" Width="84" />
                </Grid>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="RefreshButton" Content="刷新检测数据" Width="140" Height="32" Margin="0,0,8,0" Click="RefreshButton_Click" />
            <Button Content="关闭" Width="80" Height="32" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
