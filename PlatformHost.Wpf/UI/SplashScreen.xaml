<Window x:Class="WpfApp2.UI.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WpfApp2.UI.Controls"
        Title="点胶检测系统"
        Height="400" Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <!-- 渐变背景 -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF2C3E50" Offset="0"/>
            <GradientStop Color="#FF34495E" Offset="0.5"/>
            <GradientStop Color="#FF2C3E50" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- 文字动画 -->
        <Storyboard x:Key="TextFadeAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.5" To="1.0" Duration="0:0:1"
                           AutoReverse="True"/>
        </Storyboard>
        
        <!-- 旋转动画 -->
        <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:2"/>
        </Storyboard>
    </Window.Resources>
    
    <!-- 主容器 - Window只能有一个子元素 -->
    <Border Background="{StaticResource BackgroundGradient}"
            CornerRadius="15"
            BorderBrush="#FF1ABC9C"
            BorderThickness="2">
        
        <!-- 主要内容区域 -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 粒子力场/胶点三维效果背景 -->
            <controls:GlueDotParticleFieldControl Grid.RowSpan="5"
                                                  Margin="0"
                                                  ParticleCount="900"
                                                  DotRadiusRatio="0.20"
                                                  DotSeparationRatio="0.32"
                                                  HeightLiftRatio="0.20"
                                                  EnableGlow="True"/>
            
            <!-- 顶部Logo区域 -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,40,0,20">
                <!-- 系统标题 -->
                <TextBlock Text="点胶检测系统"
                          FontSize="28"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,5"/>
                
                <!-- 版本信息 -->
                <TextBlock x:Name="VersionText"
                           Text="Glue Inspection System"
                           FontSize="14"
                           Foreground="#FFBDC3C7"
                           HorizontalAlignment="Center"
                           FontStyle="Italic"/>
            </StackPanel>
            
            <!-- 进度区域 -->
            <StackPanel Grid.Row="2" Margin="60,20,60,20">
                <!-- 进度条 -->
                <ProgressBar x:Name="LoadingProgressBar"
                           Foreground="#FF3498DB"
                           Background="#FF34495E"
                           BorderBrush="#FF2C3E50"
                           BorderThickness="1"
                           Height="8"
                           Minimum="0"
                           Maximum="100"
                           Value="0"
                           Margin="0,0,0,15"/>
                
                <!-- 进度百分比 -->
                <Grid>
                    <TextBlock x:Name="ProgressPercentage"
                              Text="0%"
                              FontSize="12"
                              Foreground="#FF3498DB"
                              HorizontalAlignment="Right"
                              FontWeight="Bold"/>
                </Grid>
            </StackPanel>
            
            <!-- 状态信息区域 -->
            <StackPanel Grid.Row="3" Margin="60,0,60,40">
                <!-- 当前加载状态 -->
                <TextBlock x:Name="LoadingStatusText"
                          Text="正在初始化系统..."
                          FontSize="14"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                
                <!-- 详细状态信息 -->
                <TextBlock x:Name="DetailStatusText"
                          Text="加载配置文件..."
                          FontSize="11"
                          Foreground="#FFBDC3C7"
                          HorizontalAlignment="Center"
                          FontStyle="Italic"/>
                
                <!-- 底部信息 -->
                <TextBlock Text="博信电子 © 2025 | 专业点胶检测解决方案"
                          FontSize="10"
                          Foreground="#FF7F8C8D"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>
            
            <!-- 装饰性内边框效果 -->
            <Border Grid.RowSpan="5"
                    BorderBrush="#FF3498DB"
                    BorderThickness="1"
                    CornerRadius="14"
                    Opacity="0.3"
                    IsHitTestVisible="False"/>
        </Grid>
    </Border>
</Window> 
