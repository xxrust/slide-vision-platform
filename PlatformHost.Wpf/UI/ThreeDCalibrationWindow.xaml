<Window x:Class="WpfApp2.UI.ThreeDCalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D定标"
        Height="640"
        Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF2C3E50">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <Border Grid.Row="0" Background="#FF34495E" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="?? 3D定标" FontSize="18" FontWeight="Bold" Foreground="#FF3498DB" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="当前坐标读取DM986.D，目标写入DM908.D，写入成功后置位MR1100" FontSize="12" Foreground="#FFBDC3C7" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 内容区域 -->
        <Border Grid.Row="1" Background="#FF34495E" CornerRadius="8" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 坐标显示 -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="当前坐标:" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" x:Name="CurrentCoordTextBlock" Text="--" FontSize="20" FontWeight="Bold" Foreground="#FFFFD700" VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="校准位:" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" x:Name="CalibrationCoordTextBlock" Text="--" FontSize="14" FontWeight="Bold" Foreground="#FF2ECC71" VerticalAlignment="Center"/>
                </Grid>

                <!-- 操作按钮 -->
                <UniformGrid Grid.Row="2" Columns="2" Rows="2" Margin="0,0,0,15">
                    <Button x:Name="OpenNavigatorButton" Content="打开LJ-X Navigator" Height="36" Margin="0,0,8,8"
                            Background="#FF1ABC9C" Foreground="White" FontSize="12" FontWeight="Bold" Click="OpenNavigatorButton_Click"/>
                    <Button x:Name="ToScanCenterButton" Content="到3D扫描中心" Height="36" Margin="8,0,0,8"
                            Background="#FF3498DB" Foreground="White" FontSize="12" FontWeight="Bold" Click="ToScanCenterButton_Click"/>
                    <Button x:Name="ToCalibrationButton" Content="到校准位" Height="36" Margin="0,0,8,0"
                            Background="#FF9B59B6" Foreground="White" FontSize="12" FontWeight="Bold" Click="ToCalibrationButton_Click"/>
                    <Button x:Name="SetCalibrationButton" Content="设为校准位" Height="36" Margin="8,0,0,0"
                            Background="#FFE67E22" Foreground="White" FontSize="12" FontWeight="Bold" Click="SetCalibrationButton_Click"/>
                </UniformGrid>

                <!-- 微调 -->
                <Border Grid.Row="3" Background="#FF2C3E50" CornerRadius="6" Padding="12" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="微调:" FontSize="12" Foreground="#FFBDC3C7" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="MoveBackwardButton" Content="◀ 后移" Width="90" Height="32" Margin="0,0,10,0"
                                    Background="#FF95A5A6" Foreground="White" FontSize="12" FontWeight="Bold" Click="MoveBackwardButton_Click"/>
                            <Button x:Name="MoveForwardButton" Content="前移 ▶" Width="90" Height="32"
                                    Background="#FF95A5A6" Foreground="White" FontSize="12" FontWeight="Bold" Click="MoveForwardButton_Click"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" Text="gap:" FontSize="12" Foreground="#FFBDC3C7" VerticalAlignment="Center" Margin="10,0,6,0"/>
                        <TextBox Grid.Column="3" x:Name="GapTextBox" Width="90" Height="28"
                                 Background="#FF34495E" Foreground="White" BorderBrush="#FF3498DB" BorderThickness="1"
                                 VerticalContentAlignment="Center" Text="0.10"/>
                    </Grid>
                </Border>

                <!-- 状态显示 -->
                <Border Grid.Row="4" Background="#FF2C3E50" CornerRadius="6" Padding="10">
                    <StackPanel>
                        <TextBlock Text="?? 状态" FontSize="12" FontWeight="Bold" Foreground="#FF3498DB" Margin="0,0,0,5"/>
                        <TextBlock x:Name="StatusTextBlock" Text="等待操作..." FontSize="11" Foreground="#FFBDC3C7" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="CloseButton" Content="? 关闭" Width="90" Height="35"
                    Background="#FF95A5A6" Foreground="White" FontSize="12" FontWeight="Bold" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

